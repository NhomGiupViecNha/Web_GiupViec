@model Web_GiupViecNha.Models.DangKi

@{
    ViewBag.Title = "Đăng Kí";
    Layout = "~/Views/Shared/Layout_DangNhapKhachHang.cshtml";
    }



<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="~/Content/HinhAnh/logo_btaskee_ver_3.png" alt="">
                        </a>
                    </div>
                    <div class="regester-form">
                        <form action="@Url.Action("DangKi", "User")" id="regester" method="post">


                            <div class="form-group">
                              
                                @Html.TextBoxFor(m => m.Email, new { @class = "au-input w-100", @type = "email", @placeholder = "Email" })


                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.TenKH, new { @class = "au-input w-100", @type = "text", @placeholder = "Họ tên" })


                                @Html.ValidationMessageFor(m => m.TenKH, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.SDT, new { @class = "au-input w-100", @type = "tel", @placeholder = "Số điện thoại" })


                                @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.DiaChi, new { @class = "au-input w-100", @type = "text", @placeholder = "Địa chỉ" })


                                @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MatKhau, new { @class = "au-input w-100", @type = "password",@placeholder = "Mật khẩu" })


                                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.XacNhanMK, new { @class = "au-input w-100", @type = "password", @placeholder = "Xác nhận mật khẩu" })


                                  @Html.ValidationMessageFor(m => m.XacNhanMK, "", new { @class = "text-danger" })
                            </div>
                      

                      
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>

                            @if (TempData["AlertMessage"] != null)
                            {
                            <div id="Alertbox" class="alert @TempData["AlertType"] hide">
                                <p style="color:red"> @TempData["AlertMessage"]</p>
                            </div>

                            }
                            <div class="social-login-content">
                                <div class="social-button">
                                    <button class="au-btn au-btn--block au-btn--blue m-b-20">register with facebook</button>
                                    <div class="row register-link">
                                        <p>
                                            Bạn đã có tài khoản?
                                            <a href="@Url.Action("DangNhap","User")">  Đăng nhập ngay</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </form>
                 
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




 
