@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/Layout_DangNhapKhachHang.cshtml";
    }


    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/Content/HinhAnh/logo_btaskee_ver_3.png" alt="">
                            </a>
                        </div>
                        <div class="login-form">
                            <form action="@Url.Action("DangNhap", "User")" method="post">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="au-input au-input--full" type="email" name="email" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    <input class="au-input au-input--full" type="password" name="matkhau" placeholder="Mật Khẩu">
                                </div>
       
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" name="remember">Ghi nhớ mật khẩu
                                    </label>
                                    <label>
                                        <a href="#">Quên mật khẩu?</a>
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Đăng nhập</button>
                               @if (TempData["AlertMessage"] != null)
                                {
                                <div id="Alertbox" class="alert @TempData["AlertType"] hide">
                                    <p style="color:red"> @TempData["AlertMessage"]</p>
                                </div>

                                }
                                <div class="social-login-content">
                                    <div class="social-button">
                                        <button class="au-btn au-btn--block au-btn--blue m-b-20">Đăng nhập bằng facebook</button>
                                       
                                    </div>
                                </div>

                            </form>
                            <div class="register-link">
                                <p>
                                    Bạn chưa có tài khoản?
                                    <a href="@Url.Action("DangKi","User")"> Đăng kí tại đây</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


