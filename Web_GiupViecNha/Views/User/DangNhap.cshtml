
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_HomeLayOut.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div class="login-form">
                <form action="@Url.Action("DangNhap", "User")" id="login" method="post">
                    <h1 class="form-heading">Đăng Nhập</h1>
                    <div class="form-group">
                        <i class="far fa-user"></i>
                        <input type="text" class="form-input" name="taikhoandangnhap" placeholder="Tên đăng nhập">
                    </div>
                    <div class="form-group">
                        <i class="fas fa-key"></i>
                        <input type="password" class="form-input" name="matkhaudangnhap" placeholder="Mật khẩu">
                    </div>

                    <ul>
                        <li>
                            <a href="@Url.Action("DangKy", "User")" style="color:blue;font-size:20px">Nhấn vào đây để đăng kí.</a>
                        </li>
                    </ul>
                    @if (@ViewData["Loi"] != null)
                    {
                        <h5 style="color:red; font-size:18px; text-align:center"> @ViewData["Loi"] </h5>
                    }

                    <input type="submit" value="Đăng Nhập" class="form-submit">
                </form>
            </div>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>

