@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutCTV.cshtml";
}

<div class="main">
    <div class="user">
        <img src="images/user.png" alt="">
    </div>
    <div class="login">
        <div class="inset">
            <form action="DangNhapCTV" method="post">

                <div>
                    <span><label>Tên Đăng Nhập</label></span>
                    <span><input type="text" class="textbox" id="active"></span>
                </div>
                <div>
                    <span><label>Mật Khẩu</label></span>
                    <span><input type="password" class="password"></span>
                </div>
                <div class="sign">
                    <div class="submit">
                        <input type="submit" onclick="myFunction()" value="Đăng Nhập">
                    </div>

                    <span class="forget-pass">
                        <a href="#" style="color:blue">Bạn quên mật khẩu ?</a>
                    </span>
                    <div class="clear"> </div>
                </div>
                <div>
                    <a href="@Url.Action("DangKyCTV", "TaiKhoanCTV")" style="color:blue;font-size:20px">Nhấn vào đây để đăng kí.</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="copy-right">

</div>
