@using Web_GiupViecNha.Areas.Admin.Models
@model TaiKhoanModel
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">
    <!-- Title Page-->
    <title>Đăng Nhập Admin</title>
    <!-- Fontfaces CSS-->
    <link href="~/Areas/Admin/AssetAdmin/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <!-- Bootstrap CSS-->
    <link href="~/Areas/Admin/AssetAdmin/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <!-- Vendor CSS-->
    <link href="~/Areas/Admin/AssetAdmin/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/AssetAdmin/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
    <!-- Main CSS-->
    <link href="~/Areas/Admin/AssetAdmin/css/theme.css" rel="stylesheet" media="all">
</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
             
                  

                </div>
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="~/Home/Index">
                                <img src="~/Content/HinhAnh/logo_btaskee_ver_3.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true);
                                 <div class="form-group">
                              
                      
                                     <div class="col-md-12">
                                         @Html.TextBoxFor(m => m.Email, new { @class = "au-input w-100",@name = "email" ,@type = "email", @placeholder = "Email" })
                                        
                                     </div>
                                     @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                              
                                   
                                    <div class="col-md-12">

                                        @Html.TextBoxFor(m => m.Matkhau, new { @class = "au-input w-100", @name = "matkhau", @type = "password", @placeholder = "Mật Khẩu" })




                                    </div>

                                        @Html.ValidationMessageFor(m => m.Matkhau, "", new { @class="text-danger"})
                                    </div>
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" name="remember">Remember Me
                                    </label>
                                    <label>
                                        <a href="#">Forgotten Password?</a>
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                                if (TempData["AlertMessage"] != null)
                                {
                                    <div id="Alertbox" class="alert @TempData["AlertType"] hide">
                                       <p style="color:red"> @TempData["AlertMessage"]</p>
                                    </div>

                                }
                                
                            }
                       
                         
                        </div>
                    </div>
                </div>
            </div>

       </div>


    <!-- Jquery JS-->
    <script src="~/Areas/Admin/AssetAdmin/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/Areas/Admin/AssetAdmin/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/Areas/Admin/AssetAdmin/vendor/slick/slick.min.js">
    </script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/wow/wow.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/animsition/animsition.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/vendor/select2/select2.min.js">
    </script>
    <!-- Main JS-->
    <script src="~/Areas/Admin/AssetAdmin/js/main.js"></script>

</body>

</html>
<!-- end document-->